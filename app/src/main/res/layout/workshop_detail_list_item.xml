    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/workshop_name_border"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_workshopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:shadowColor="#6BFFFFFF"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="3"
                android:text="BEAVER BODY PAINT"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_workshop_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="QUMBER ALI" />

            <TextView
                android:id="@+id/tv_workshop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="5dp"
                android:text="9 GARDEN ALY, ALBANY, NY" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/iv_phone_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:background="@mipmap/ic_phone_call"
            android:clickable="true"
            android:elevation="10dp" />
    </androidx.cardview.widget.CardView>
    <!--    </androidx.constraintlayout.widget.ConstraintLayout>-->
</layout>