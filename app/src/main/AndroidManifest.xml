<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".app.MainApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_dr_drive"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.InterviewDemo"
        tools:targetApi="31">
        <activity
            android:name=".ui.registration.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar.SplashScreenTheme"/>
        <activity
            android:name=".ui.OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar.SplashScreenTheme" />
        <activity
            android:name=".ui.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar.SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="false" />
    </application>

</manifest>